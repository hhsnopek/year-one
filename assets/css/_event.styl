.event
  position: relative
  width: 100%
  padding: 2em 4em
  margin: 0
  list-style: none

  +below(380px)
    padding: 2em 3em

  &:nth-of-type(even)
    text-align: right

    +below(380px)
      text-align: left

  &:nth-of-type(odd)
    text-align: left

    +below(800px)
      text-align: right

    +below(380px)
      text-align: left

  .content
    display: inline-block
    width: 45%

    +below(800px)
      width: 90%

    +below(380px)
      width: 100%
      text-align: center

  h2
    margin: 1.15em 0

  .title
    color: gray

    +below(800px)
      width: 90%

    &:hover
      color: red

  img
    max-height: 400px
    max-width: 100%
    border-radius: 6px

  .date
    position: absolute
    left: 50%
    transform: translate(-50%, -50%)
    z-index: 2
    text-decoration: none
    color: peach
    font-size: 1.25em
    background: tan

    &:hover
      color: red

    &:focus
      outline: 0

    +above(800px)
      h3
        margin: .5em 0
        padding: .5em 0

    +below(800px)
      left: 10%
      font-size: 1.15em

    +below(600px)
      font-size: 1em

    +below(500px)
      left: 15%

    +below(380px)
      position: relative
      left: 0
      width: 100%
      text-align: center
