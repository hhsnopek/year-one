#events-timeline
  position: relative
  margin: 0
  padding: 0
  height: 100%
  background: tan

  &:before
    content: ""
    position: absolute
    top: -3px
    left: 50%
    height: 100%
    width: 4px
    z-index: 2
    background: blue
    transform: translate(-50%, 0)

    +below(800px)
      left: 10%

    +below(500px)
      left: 15%

    +below(380px)
      display: none

  &:after
    content: ""
    display: table
    clear: both
